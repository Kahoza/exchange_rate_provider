<div class="center-div">
  <h1>Exchange Rates</h1>
  <table>
    <tr>
      <th>Country</th>
      <th>Currency</th>
      <th>Amount</th>
      <th>Code</th>
      <th>Rate</th>
    </tr>
    <% @rates.each do |rate| %>
      <tr>
        <td><%= rate[:country] %></td>
        <td><%= rate[:currency] %></td>
        <td><%= rate[:amount] %></td>
        <td><%= link_to rate[:code], api_v1_exchange_rate_path(rate[:code]) %></td>
        <td><%= rate[:rate] %></td>
      </tr>
    <% end %>
  </table>
</div>
